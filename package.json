{
  "name": "seo-optimizer",
  "version": "1.0.0",
  "description": "Desktop SEO analysis tool for content optimization",
  "author": "Your Name",
  "license": "MIT",
  "packageManager": "yarn@4.5.2",
  "main": "src/main.js",
  "scripts": {
    "start": "yarn webpack:build && electron .",
    "dev": "concurrently \"yarn webpack:watch\" \"wait-on dist/index.html && yarn electron:dev\"",
    "electron:dev": "electron . --dev",
    "webpack:build": "webpack --mode production",
    "webpack:watch": "webpack --mode development --watch",
    "build": "yarn webpack:build && electron-builder",
    "build:win": "yarn webpack:build && electron-builder --win",
    "build:mac": "yarn webpack:build && electron-builder --mac",
    "build:linux": "yarn webpack:build && electron-builder --linux",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,css,md,scss}\"",
    "prepare": "husky",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.4",
    "sass": "^1.93.2",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^38.3.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "wait-on": "^9.0.1",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.seo-optimizer.app",
    "productName": "SEO Optimizer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Office"
    }
  }
}
